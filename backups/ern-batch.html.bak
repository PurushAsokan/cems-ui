  <!-- Main Content -->
  <main class="main-container">
    <div class="page-container">

      <!-- Section 0: ERN Format Information -->
      <div class="section">
        <div class="section-header">
          <h2 class="section-title">ERN Format Guide</h2>
        </div>
        <div class="section-body">
          <div style="background: #EFF6FF; border: 2px solid #2563EB; border-radius: 8px; padding: 20px;">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 24px;">
              <div>
                <div style="font-weight: 600; margin-bottom: 12px; color: #1E40AF;">Format Structure</div>
                <div style="font-family: monospace; font-size: 18px; font-weight: 600; margin-bottom: 8px;">[Year][Program][Type][Sequence]</div>
                <div class="text-xs" style="color: #6B7280; line-height: 1.6;">
                  • Year: Last 2 digits (e.g., 25 for 2025)<br/>
                  • Program: 3-letter code (e.g., ENG, CSE)<br/>
                  • Type: 1=UG, 2=PG<br/>
                  • Sequence: 3-digit number (001-999)
                </div>
              </div>
              <div>
                <div style="font-weight: 600; margin-bottom: 12px; color: #1E40AF;">Examples</div>
                <div style="background: white; border: 1px solid #BFDBFE; border-radius: 6px; padding: 12px; margin-bottom: 8px;">
                  <div style="font-family: monospace; font-weight: 600; color: #2563EB;">25ENG1001</div>
                  <div class="text-xs" style="color: #6B7280;">UG Engineering Student - First in sequence</div>
                </div>
                <div style="background: white; border: 1px solid #BFDBFE; border-radius: 6px; padding: 12px; margin-bottom: 8px;">
                  <div style="font-family: monospace; font-weight: 600; color: #2563EB;">25CSE2015</div>
                  <div class="text-xs" style="color: #6B7280;">PG Computer Science - 15th student</div>
                </div>
                <div style="background: white; border: 1px solid #BFDBFE; border-radius: 6px; padding: 12px;">
                  <div style="font-family: monospace; font-weight: 600; color: #F59E0B;">25ENG1123/A</div>
                  <div class="text-xs" style="color: #6B7280;">Mid-semester joiner format</div>
                </div>
              </div>
            </div>
            <div class="alert alert-info" style="margin-top: 16px; margin-bottom: 0;">
              <i data-feather="info" style="width: 20px; height: 20px;"></i>
              <div><strong>Important:</strong> Numbers are assigned in alphabetical order of student names. Same ERN is retained throughout the course (except UG → PG transition).</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Section 1: Filters -->
      <div class="section">
        <div class="section-header">
          <h2 class="section-title">Filter Students</h2>
        </div>
        <div class="section-body">

          <!-- Compact Filter Grid -->
          <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 16px; align-items: end;">
            
            <div class="form-group">
              <label class="form-label required">Academic Year</label>
              <select class="form-select">
                <option value="">-- Select --</option>
                <option value="2024-2025" selected>2024-2025</option>
                <option value="2023-2024">2023-2024</option>
                <option value="2022-2023">2022-2023</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label required">Program</label>
              <select class="form-select">
                <option value="">-- Select --</option>
                <option value="BE-CSE" selected>B.E. - CSE</option>
                <option value="BE-ECE">B.E. - ECE</option>
                <option value="BE-MECH">B.E. - Mech</option>
                <option value="BE-EEE">B.E. - EEE</option>
                <option value="BE-CIVIL">B.E. - Civil</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label required">Class</label>
              <select class="form-select">
                <option value="">-- Select --</option>
                <option value="I-Year" selected>I Year</option>
                <option value="II-Year">II Year</option>
                <option value="III-Year">III Year</option>
                <option value="IV-Year">IV Year</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label">Section</label>
              <select class="form-select">
                <option value="">All</option>
                <option value="A" selected>A</option>
                <option value="B">B</option>
                <option value="C">C</option>
              </select>
            </div>

          </div>

          <!-- Search Button -->
          <div style="margin-top: 16px; display: flex; gap: 12px; align-items: center;">
            <button class="btn btn-primary">
              <i data-feather="search" style="width: 16px; height: 16px;"></i>
              Search Students
            </button>
            <div class="form-group" style="margin: 0; display: flex; align-items: center; gap: 8px;">
              <input type="checkbox" id="midSemesterJoiner" class="checkbox" />
              <label for="midSemesterJoiner" style="margin: 0; font-size: 14px; cursor: pointer;">Mid-semester Joiner (Format: XXXXX/A)</label>
            </div>
          </div>

        </div>
      </div>

      <!-- Section 2: Results - Eligible Students -->
      <div class="section">
        <div class="section-header">
          <div style="display: flex; align-items: center; gap: 12px;">
            <h2 class="section-title">Eligible Students</h2>
            <span class="status status-approved">
              <span class="status-dot"></span>
              45 Students
            </span>
          </div>
          <div style="display: flex; gap: 8px;">
            <button class="btn btn-sm btn-ghost">
              <i data-feather="check-square" style="width: 16px; height: 16px;"></i>
              Select All
            </button>
            <button class="btn btn-sm btn-secondary">
              <i data-feather="eye" style="width: 16px; height: 16px;"></i>
              Generate Preview
            </button>
          </div>
        </div>
        <div class="section-body">

          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th style="width: 40px;">
                    <input type="checkbox" />
                  </th>
                  <th>Student Name</th>
                  <th>Registration No.</th>
                  <th>Class</th>
                  <th>Section</th>
                  <th>Current Status</th>
                </tr>
              </thead>
              <tbody>
