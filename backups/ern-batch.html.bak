                  <td>I Year</td>
                  <td>A</td>
                  <td>
                    <span class="status status-approved">
                      <span class="status-dot"></span>
                      Generated
                    </span>
                  </td>
                </tr>

                <!-- Sample Student 6 -->
                <tr>
                  <td>
                    <input type="checkbox" />
                  </td>
                  <td>Farhan Ali</td>
                  <td>APP-2024-006</td>
                  <td>I Year</td>
                  <td>A</td>
                  <td>
                    <span class="status status-pending">
                      <span class="status-dot"></span>
                      Pending
                    </span>
                  </td>
                </tr>

                <!-- Sample Student 7 -->
                <tr>
                  <td>
                    <input type="checkbox" />
                  </td>
                  <td>Gayatri Menon</td>
                  <td>APP-2024-007</td>
                  <td>I Year</td>
                  <td>A</td>
                  <td>
                    <span class="status status-pending">
                      <span class="status-dot"></span>
                      Pending
                    </span>
                  </td>
                </tr>

                <!-- Sample Student 8 -->
                <tr>
                  <td>
                    <input type="checkbox" disabled />
                  </td>
                  <td>Harsh Verma</td>
