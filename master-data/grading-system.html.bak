      <!-- SGPA/CGPA Calculation Formula -->
      <div class="section">
        <div class="section-header">
          <h2 class="section-title">SGPA / CGPA Calculation Formula</h2>
        </div>
        <div class="section-body">
          <div style="background: #F8F9FA; border: 1px solid #E5E7EB; border-radius: 8px; padding: 24px;">
            <div style="margin-bottom: 20px;">
              <div style="font-size: 14px; font-weight: 600; color: #111827; margin-bottom: 8px;">Semester Grade Point Average (SGPA)</div>
              <div style="background: white; padding: 16px; border-radius: 6px; border: 1px solid #E5E7EB; font-family: monospace; font-size: 14px; color: #2563EB;">
                SGPA = Σ (Grade Point × Credits) / Σ Credits
              </div>
              <div class="text-xs text-secondary" style="margin-top: 8px;">
                Sum of (Grade Point × Credits for each subject) divided by Total Credits
              </div>
            </div>

            <div style="margin-bottom: 20px;">
              <div style="font-size: 14px; font-weight: 600; color: #111827; margin-bottom: 8px;">Cumulative Grade Point Average (CGPA)</div>
              <div style="background: white; padding: 16px; border-radius: 6px; border: 1px solid #E5E7EB; font-family: monospace; font-size: 14px; color: #2563EB;">
                CGPA = Σ (SGPA × Credits per Semester) / Σ Total Credits
              </div>
              <div class="text-xs text-secondary" style="margin-top: 8px;">
                Weighted average of all semester SGPAs
              </div>
            </div>

            <div>
              <div style="font-size: 14px; font-weight: 600; color: #111827; margin-bottom: 8px;">Percentage Equivalent</div>
              <div style="background: white; padding: 16px; border-radius: 6px; border: 1px solid #E5E7EB; font-family: monospace; font-size: 14px; color: #2563EB;">
                Percentage = CGPA × 10
              </div>
              <div class="text-xs text-secondary" style="margin-top: 8px;">
                Example: CGPA 8.5 = 85%
              </div>
            </div>
          </div>
        </div>
      </div>

