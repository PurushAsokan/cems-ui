  <script>
    // Focus management & state for Edit modal
    let previousFocusEl = null;
    let currentEditRef = null;

    function editModalKeyHandler(e) {
      if (e.key === 'Escape') closeEditApplicationModal();
    }

    // Open Edit Application modal and populate fields (expanded Data Entry form)
    function openEditApplicationModal(appRef, name, program, year, subjects, attendance, feeStatus) {
      currentEditRef = appRef || '';
      document.getElementById('editAppRef').value = currentEditRef;
      const disp = document.getElementById('editAppRefDisplay'); if (disp) disp.textContent = currentEditRef;
      document.getElementById('editStudentName').value = name || '';
      document.getElementById('editProgram').value = program || '';
      document.getElementById('editYear').value = year || '';
      // If subjects passed as a count, leave the subjects text empty to avoid overwriting full list
      document.getElementById('editSubjects').value = (subjects && isNaN(subjects)) ? subjects : '';
      document.getElementById('editAttendance').value = attendance || '';
      document.getElementById('editFeeStatus').value = feeStatus || 'Paid';

      previousFocusEl = document.activeElement;
      const modal = document.getElementById('editApplicationModal');
      if (modal) modal.style.display = 'flex';

      setTimeout(() => {
        const first = document.querySelector('#editApplicationModal .form-input, #editApplicationModal .form-select, #editApplicationModal button');
        if (first && first.focus) first.focus();
        feather.replace();
      }, 50);

      document.addEventListener('keydown', editModalKeyHandler);
    }

    function closeEditApplicationModal() {
      const modal = document.getElementById('editApplicationModal');
      if (modal) modal.style.display = 'none';
      document.removeEventListener('keydown', editModalKeyHandler);
      if (previousFocusEl && previousFocusEl.focus) previousFocusEl.focus();
      currentEditRef = null;
    }

    // Save changes from the Edit modal into the corresponding table row (demo-only)
    function saveApplicationEdit(event) {
      event.preventDefault();
      const ref = document.getElementById('editAppRef').value;
      const name = document.getElementById('editStudentName').value;
      const program = document.getElementById('editProgram').value;
      const year = document.getElementById('editYear').value;
      const subjectsText = document.getElementById('editSubjects').value;
      const attendance = document.getElementById('editAttendance').value;
      const feeStatus = document.getElementById('editFeeStatus').value;

      const rows = document.querySelectorAll('.data-table tbody tr');
      let updated = false;
      rows.forEach(tr => {
        const tds = tr.querySelectorAll('td');
        const refCell = tds[1];
        if (refCell && refCell.textContent.trim() === ref) {
          // Update name, program, year
          if (tds[2]) tds[2].textContent = name;
          if (tds[3]) tds[3].textContent = program;
          if (tds[4]) tds[4].textContent = year;

          // Subjects count: if user provided explicit subject list, update count
          if (tds[5]) {
            if (subjectsText && subjectsText.trim()) {
              const count = subjectsText.split(',').map(s => s.trim()).filter(Boolean).length;
              tds[5].textContent = count;
            }
          }

          // Attendance cell: keep consistent markup
          if (tds[6]) {
            tds[6].innerHTML = attendance && attendance.trim() ? ('<span class="status status-verified"><span class="status-dot"></span>' + attendance + '</span>') : '<span class="text-muted">--</span>';
          }

          // Fee status cell: map to status classes
          if (tds[7]) {
            let cls = 'status-approved';
            if (feeStatus === 'Pending') cls = 'status-pending';
            if (feeStatus === 'Partial') cls = 'status-warning';
            tds[7].innerHTML = '<span class="status ' + cls + '"><span class="status-dot"></span>' + feeStatus + '</span>';
          }

          updated = true;
        }
      });

      if (updated) {
        alert('Saved changes for ' + ref);
        closeEditApplicationModal();
        setTimeout(() => feather.replace(), 0);
      } else {
        alert('Could not locate application row for ' + ref);
      }
    }

    // Simple batch approve handler (demo only)
    function batchApproveSelected() {
      const checkboxes = document.querySelectorAll('.data-table tbody input[type="checkbox"]:checked');
      if (!checkboxes.length) {
        alert('Please select at least one application to batch approve.');
        return;
      }
      if (!confirm('Approve ' + checkboxes.length + ' selected application(s)?')) return;
      // Demo behavior: uncheck and show success
      checkboxes.forEach(cb => cb.checked = false);
      alert('Selected applications approved successfully.');
    }

    feather.replace();
  </script>
</body>
</html>
